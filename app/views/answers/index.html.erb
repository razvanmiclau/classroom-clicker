<div class="jumbotron">
  <h1 class="text-center"><%= @question.title %></h1>
  <% if @answers.any? %>
    <h4 class="text-center">You are the <%= @visit.impressionist_count + 1 %>th visitor</h4>
  <% end %>
</div>

<div id="answers">
  <%= render 'answer' %>
</div>
<hr>
<% if @question.choices.any? || @question.kind == "True/False" %>
  <div class="row">
      <% if @question.kind != "True/False" %>
        <%= render 'choices_form' %>
      <% else %>
        <%= render 'binary_choice_form' %>
      <% end %>
  </div>
<% else %>
  <div class="row">
    <div class="col-sm-12">
      <%= render 'form' %>
    </div>
  </div>
<% end %>
