<script>
  var question_id = "<%= j @question.id.to_s %>";
  var answers_rows = "<%= j @answers.group(:value).count.to_s %>";
</script>


<div class="jumbotron">
  <h1 class="text-center"><%= @question.title %></h1>
</div>

<div class="row">
<% if @answers.any? %>
  <div id="lect-answers" class="col-sm-6">
    <% @answers.each do |answer| %>
      <p class="bg-info answer-line"><strong>Anonymus: </strong><%= answer.value %> <small><%= time_ago_in_words(answer.created_at) %> ago</small></p>
    <% end %>
  </div>
<% else %>
  <div class="col-sm-12">
    <h3>No answers. please share the answers link to students</h3>
  </div>
<% end %>
  <div class="sidebar col-sm-6">
    <div id="chart">
      
    </div>
  </div>
</div>
<hr>
<div class="row">
  <div class="col-sm-12">
    <%= link_to 'Answer', topic_question_answers_path(@topic, @question, @answer), class: 'btn btn-primary' %>
    <%= link_to 'Back', @topic, class: 'btn btn-default' %>

  </div>
</div>
